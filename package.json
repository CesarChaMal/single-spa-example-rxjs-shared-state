{
  "name": "single-spa-example-rxjs-shared-state",
  "version": "1.0.0",
  "description": "single-spa example that shows how to use a utility module to share some application state across other microfrontends",
  "private": true,
  "workspaces": [
    "packages/*"
  ],  "scripts": {
    "bootstrap": "yarn install",
    "start": "cross-env isLocal=true lerna run start --stream",
    "prebuild": "rimraf deploy && mkdirp deploy deploy/auth deploy/home deploy/login deploy/navbar",
    "build": "lerna run build",
    "postbuild": "cp packages/root-config/dist/* deploy && cp packages/auth/dist/* deploy/auth && cp packages/home/dist/* deploy/home && cp packages/login/dist/* deploy/login && cp packages/navbar/dist/* deploy/navbar",
    "deploy": "yarn bootstrap && yarn build",
    "preserve": "yarn build",
    "serve": "npx serve deploy -s -n -C"
  },
  "keywords": [
    "single-spa",
    "example",
    "rxjs",
    "shared state",
    "utility"
  ],
  "author": "@filoxo",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/plugin-transform-runtime": "^7.20.0",
    "@babel/preset-react": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "babel-loader": "^8.2.5",
    "mkdirp": "^1.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.1.0",
    "rollup-plugin-svelte": "7.2.2",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup": "^2.38.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-terser": "^7.0.2",    
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-config-single-spa": "^4.0.0",
    "webpack-config-single-spa-react": "^4.0.0",
    "webpack-dev-server": "^4.9.0"
  },
  "dependencies": {
    "lerna": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^7.5.7",
    "single-spa": "^5.9.3",
    "single-spa-layout": "^1.0.0",
    "single-spa-react": "^4.0.0",
    "single-spa-svelte": "^2.0.0",
    "svelte": "^3.44.0",
    "svelte-routing": "^1.5.0",
    "sirv-cli": "^1.0.14"
  }
}
